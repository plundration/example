{
    "name": "backend",
    "version": "1.0.0",
    "description": "",
    "main": "src/index.ts",
    "scripts": {
        "build": "NODE_ENV=production tsc",
        "start": "node -r ts-node/register -r tsconfig-paths/register dist/index.js",
        "dev": "npx nodemon --ignore uploads --exec node --inspect -r ts-node/register -r tsconfig-paths/register src/index.ts",
        "lint": "eslint . --ext .ts",
        "format": "prettier --write .",
        "typeorm": "npx typeorm-ts-node-commonjs",
        "schema:sync": "npm run typeorm schema:sync -- -d src/database/database.ts",
        "schema:drop": "npm run typeorm schema:drop -- -d src/database/database.ts",
        "migrations:clear": "npm run typeorm migration:revert -- --fake -d src/database/database.ts && rm ./migrations/* && npm run schema:sync",
        "migrations:generate": "npx typeorm-ts-node-commonjs migration:generate ./migrations/BaseSchema -d src/database/database.ts",
        "migrations:run": "npx typeorm-ts-node-commonjs migration:run -d src/database/database.ts"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "dependencies": {
        "@faker-js/faker": "^8.4.1",
        "@google-cloud/logging-winston": "^6.0.0",
        "axios": "^1.7.2",
        "cors": "^2.8.5",
        "dotenv": "^16.4.5",
        "express": "^4.19.2",
        "firebase-admin": "^12.2.0",
        "morgan": "^1.10.0",
        "multer": "^1.4.5-lts.1",
        "node-cron": "^3.0.3",
        "nodemailer": "^6.9.14",
        "pg": "^8.12.0",
        "typeorm": "^0.3.20",
        "typeorm-extension": "^3.5.1",
        "winston": "^3.13.0",
        "zod": "^3.23.8"
    },
    "devDependencies": {
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.21",
        "@types/morgan": "^1.9.9",
        "@types/multer": "^1.4.11",
        "@types/node": "^20.14.9",
        "@types/node-cron": "^3.0.11",
        "@types/nodemailer": "^6.4.15",
        "@typescript-eslint/eslint-plugin": "^7.14.1",
        "@typescript-eslint/parser": "^7.14.1",
        "eslint": "^8.57.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-absolute-imports": "^0.0.3",
        "eslint-plugin-no-relative-import-paths": "^1.5.5",
        "eslint-plugin-prettier": "^5.1.3",
        "node-ts": "^6.0.1",
        "nodemon": "^3.1.4",
        "prettier": "^3.3.2",
        "ts-node": "^10.9.2",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^5.5.2"
    }
}
